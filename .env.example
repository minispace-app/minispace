# minispace.app Environment Variables
# Copy this file to .env and edit with your values

# Database
POSTGRES_USER=garderie
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=minispace

# Redis
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET=change_this_secret_in_production_min_32_chars
JWT_REFRESH_SECRET=change_this_refresh_secret_in_production_min_32_chars
JWT_EXPIRY_SECONDS=900
JWT_REFRESH_EXPIRY_DAYS=30

# Media storage
MEDIA_DIR=/data/media

# Encryption at rest
# Generate with: openssl rand -hex 32
ENCRYPTION_MASTER_KEY=

# Push notifications — FCM (Android)
FCM_API_KEY=

# Push notifications — APNS (iOS)
APNS_KEY_PATH=/run/secrets/apns_key.p8
APNS_KEY_ID=
APNS_TEAM_ID=

# App bundle
APP_BUNDLE_ID=app.minispace.app
SUPER_ADMIN_KEY=super_admin_dev_key

# Admin panel URLs
APP_BASE_URL=http://localhost

# Frontend
NEXT_PUBLIC_API_URL=http://localhost/api
NEXT_PUBLIC_WS_URL=ws://localhost/ws

# Nginx configuration and ports
# NGINX_ENV: "dev" for development (HTTP only) or "prod" for production (HTTPS)
NGINX_ENV=dev
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# SSL/TLS certificates (for HTTPS, only needed when NGINX_ENV=prod)
# Path to the directory containing fullchain.pem and privkey.pem
SSL_CERTS_DIR=/etc/letsencrypt

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=

# Backup encryption (optional)
BACKUP_ENCRYPT_PASSWORD=

# Demo instance — password for all pre-configured demo accounts
DEMO_PASSWORD=Demo2024!

# Logging
RUST_LOG=info

# Timezone for all containers (e.g., UTC, America/Toronto, Europe/Paris, America/New_York)
TZ=UTC